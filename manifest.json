{
  "manifest_version": 3,
  "name": "Gmail Urgency Classifier",
  "version": "1.1",
  "description": "Classifies emails in Gmail using local JavaScript logic.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
}